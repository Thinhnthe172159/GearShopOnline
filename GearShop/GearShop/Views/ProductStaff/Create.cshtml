@model GearShop.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutStaff";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h4 class="mb-0">Tạo sản phẩm mới</h4>
                    <a asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
                </div>

                <form asp-action="Create" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductName" class="form-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="BrandId" class="form-label">Thương hiệu</label>
                        <select asp-for="BrandId" class="form-select" asp-items="@ViewBag.BrandId">
                            <option value="">-- Chọn thương hiệu --</option>
                            @if (ViewBag.BrandId == null || !((SelectList)ViewBag.BrandId).Any())
                            {
                                <option value="" disabled>Không có thương hiệu nào</option>
                            }
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductTypeId" class="form-label">Loại sản phẩm</label>
                        <select asp-for="ProductTypeId" class="form-select" asp-items="@ViewBag.ProductTypeId">
                            <option value="">-- Chọn loại sản phẩm --</option>
                            @if (ViewBag.ProductTypeId == null || !((SelectList)ViewBag.ProductTypeId).Any())
                            {
                                <option value="" disabled>Không có loại sản phẩm nào</option>
                            }
                        </select>
                        <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Quantity" class="form-label">Số lượng</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="InServiceDate" class="form-label">Ngày mở bán</label>
                        <input asp-for="InServiceDate" class="form-control" type="date" />
                        <span asp-validation-for="InServiceDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="InStockDate" class="form-label">Ngày nhập hàng</label>
                        <input asp-for="InStockDate" class="form-control" type="date" />
                        <span asp-validation-for="InStockDate" class="text-danger"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <label asp-for="Description" class="form-label">Miêu tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Các trường ẩn hoặc tự động điền -->
                    <input type="hidden" asp-for="CreatedDate" value="@DateTime.Now" />
                    <input type="hidden" asp-for="CreatedBy" value="@User.Identity?.Name" />
                    <input type="hidden" asp-for="ModifiedDate" value="@DateTime.Now" />
                    <input type="hidden" asp-for="ModifiedBy" value="@User.Identity?.Name" />
                    <input type="hidden" asp-for="Status" value="1" />

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-plus-square me-2"></i>Tạo mới
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}